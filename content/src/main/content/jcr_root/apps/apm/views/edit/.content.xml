<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
  xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
  xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
  jcr:primaryType="cq:Page">
  <jcr:content
    jcr:mixinTypes="[sling:VanityPath]"
    jcr:primaryType="cq:PageContent"
    jcr:title="APM Edit"
    granite:class="apm-edit-script-page"
    sling:resourceType="granite/ui/components/shell/page"
    sling:vanityPath="/apm/edit"
    consoleId="apm-edit"
    omnisearchLocationPath="/libs/granite/omnisearch/content/metadata/experiencefragments">
    <head jcr:primaryType="nt:unstructured">
      <clientlibs
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
        categories="[apm-edit, apm-editor-grid]"/>
    </head>
    <title
      jcr:primaryType="nt:unstructured"
      sling:resourceType="granite/ui/components/coral/foundation/text"
      text="APM Edit">
    </title>
    <actions jcr:primaryType="nt:unstructured">
      <primary jcr:primaryType="nt:unstructured">
        <showReferences
          granite:id="showReference"
          granite:class="foundation-collection-action"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/button"
          icon="file"
          text="Show References"
          variant="actionBar"/>
        <validate
          granite:id="validateButton"
          granite:class="foundation-collection-action"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/button"
          icon="spellcheck"
          text="Validate"
          variant="actionBar"/>
      </primary>
      <secondary jcr:primaryType="nt:unstructured">
        <cancel
          granite:id="cancelButton"
          granite:class="foundation-collection-action"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/button"
          text="Cancel"
          variant="quiet"/>
        <save
          jcr:primaryType="nt:unstructured"
          sling:resourceType="apm/components/saveAndCloseButton"/>
      </secondary>
    </actions>
    <content
      granite:class="apm-edit-form"
      granite:rel="apm-edit"
      jcr:primaryType="nt:unstructured"
      sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType="nt:unstructured">
        <form
          granite:class="cache-warmup-form"
          granite:id="script-form"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/form"
          action="${requestPathInfo.suffix}"
          dataPath="${requestPathInfo.suffix}/jcr:content"
          method="post"
          style="aligned">
          <items jcr:primaryType="nt:unstructured">
            <grid
              granite:class="apm-editor-grid apm-editor-edit-mode"
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/container"
              maximized="true">
              <items jcr:primaryType="nt:unstructured">
                <console
                  granite:class="apm-editor-console"
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                  <items jcr:primaryType="nt:unstructured">
                    <console
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="apm/components/console"/>
                  </items>
                </console>
                <details
                  granite:class="apm-editor-details"
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                  jcr:title="Details">
                  <items jcr:primaryType="nt:unstructured">
                    <details
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="apm/components/scriptDetails"/>
                  </items>
                </details>
                <execution
                  granite:class="apm-editor-execution"
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                  jcr:title="Execution">
                  <items jcr:primaryType="nt:unstructured">
                    <disabled
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                      text="Disabled"
                      fieldLabel="Execution"
                      name="cqsm:executionEnabled"
                      value="false"
                      uncheckedValue="true"/>
                    <mode
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldLabel="Mode"
                      name="cqsm:executionMode">
                      <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="apm/datasource/executionModes"/>
                    </mode>
                    <environment
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldLabel="Environment"
                      name="cqsm:executionEnvironment">
                      <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="apm/datasource/executionEnvironments"/>
                    </environment>
                    <hook
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldLabel="Hook"
                      name="cqsm:executionHook"/>
                    <schedule
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                      fieldLabel="Schedule"
                      name="cqsm:executionSchedule"
                      type="datetime"/>
                  </items>
                </execution>
              </items>
            </grid>
          </items>
        </form>
      </items>
    </content>
  </jcr:content>
</jcr:root>
